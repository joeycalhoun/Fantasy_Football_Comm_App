<% include ./partials/header %>

<h1 class="display-1 text-center mb-5">New Poll</h1>
<div class="container">
	<form action="/polls" method="POST">
		<div class="row">
			<div class="col-lg-3">
				<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Create</button>
				</div>
				<div class="form-group">
					<input type="button" class="btn btn-lg btn-primary btn-block" id="add" onclick="add_option();" value="Add Option">
				</div>
			</div>
			<div class="col-lg-9" id="optionGroup">
					<div class="form-group mb-5">
						<input class="form-control" type="text" name="question" placeholder="Question">
					</div>
					<div id="options">
						<div class="form-group">
							<input class="form-control" type="text" name="poll[option1]" placeholder="option 1">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="poll[option2]" placeholder="option 2">
						</div>
					</div>
			</div>
		</div>
	</form>
</div>


<% include ./partials/footer %>